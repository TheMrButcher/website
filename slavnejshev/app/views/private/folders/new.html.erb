<%= form_for(@folder) do |f| %>
  <%= f.label :name, t(:folder_name_label) %>
  <%= f.text_field :name %>
  
  <%= f.label :owner, t(:owner_name_label) %>
  <%= f.text_field :owner %>
  
  <%= f.label :public, t(:public_folder_label) %>
  <%= f.check_box :public %>
  
  <%= f.label :stores_panoramas, t(:panorama_folder_label) %>
  <%= f.check_box :stores_panoramas %>
  
  <%= f.submit t(:submit_folder) %>
<% end %>
